<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/degradebluewhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvPlateCarPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvModelCarPReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvPlateCarPreview"
        android:layout_marginTop="70dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBrandCarPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvPlateCarPreview"
        android:layout_marginEnd="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDoorsCarPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvBrandCarPreview"
        android:layout_alignTop="@+id/tvModelCarPReview"

        android:text="TextView" />

    <TextView
        android:id="@+id/tvTypeCarPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvPlateCarPreview"
        android:layout_marginTop="114dp"
        android:text="TextView" />

</RelativeLayout>